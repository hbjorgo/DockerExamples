FROM mcr.microsoft.com/dotnet/sdk:6.0 as build

COPY ./ConsoleApplication.csproj ./App/ConsoleApplication.csproj
RUN dotnet restore ./App/ConsoleApplication.csproj

COPY . ./App/

WORKDIR ./App/

RUN dotnet publish "ConsoleApplication.csproj" -c Release -p:PublishSingleFile=true -r alpine-x64 --self-contained true -p:PublishTrimmed=true -o /publish

FROM mcr.microsoft.com/dotnet/runtime-deps:6.0-alpine

COPY --from=build ./publish/ App/
WORKDIR /App
ENTRYPOINT ["/App/ConsoleApplication"]
